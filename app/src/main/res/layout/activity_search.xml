<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchFragment">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/welc"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorTextIcons"
        android:hint="@string/search"
        android:id="@+id/search_cocktail"
        android:padding="8sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_cocktail"
        android:layout_marginTop="20sp"
        android:id="@+id/btn_search_by_name"
        android:text="@string/btn_search_name"
        android:background="@color/colorAccent"
        android:layout_marginStart="15sp"
        />

    <Button
        android:id="@+id/btn_search_by_character"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_cocktail"
        android:layout_alignParentRight="true"
        android:layout_marginStart="132dp"
        android:layout_marginLeft="35sp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/btn_search_by_name"
        android:background="@color/colorPrimaryLight"
        android:text="@string/btn_search_first_char" />

</RelativeLayout>